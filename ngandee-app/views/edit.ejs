<!-- views/edit.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Edit page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body style="background-color: gray;">
  <h1 class="text-center mt-5 mb-5" style="font-size:100px;">เพิ่มข้อมูล User</h1>

  <div style="margin:0px 15% 0px 15% ;">
    <form method="post" action="/edit/<%= data.UID %>" id="editForm">
      <div class="mb-3">
        <label for="SSN" class="form-label">SSN: </label>
        <input type="text" class="form-control" id="SSN" name="SSN" value="<%= data.SSN %>" required>
      </div>
      <div class="mb-3">
        <label for="UName" class="form-label">Name: </label>
        <input type="text" class="form-control" id="UName" name="UName" value="<%= data.UName %>" required>
      </div>
      <div class="mb-3">
        <label for="UGender" class="form-label">Gender: </label>
        <select class="form-select" id="UGender" name="UGender" required>
            <option value="">Select</option>
            <option value="M" <% if (data.UGender === 'M') { %>selected<% } %>>Male</option>
            <option value="F" <% if (data.UGender === 'F') { %>selected<% } %>>Female</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="UBirthDate" class="form-label">Date of Birth: </label>
        <input type="date" class="form-control" id="UBirthDate" name="UBirthDate" value="<%= data.UBirthDate %>" required>
      </div>
      <div class="mb-3">
        <label for="UDetail" class="form-label">Details: </label>
        <textarea class="form-control" id="UDetail" name="UDetail"><%= data.UDetail %></textarea>
      </div>
      <div class="mb-3">
        <label for = "UAddr" class="form-label">Address: </label>
        <input type="text" class="form-control" id="UAddr" name="UAddr" value="<%= data.UAddr %>">
      </div>
      <div class="mb-3">
        <label for="UEmail" class="form-label">Email: </label>
        <input type="email" class="form-control" id="UEmail" name="UEmail" value="<%= data.UEmail %>" required>
      </div>
      <div class="mb-3">
        <label for="UPhoneNo" class="form-label">Phone Number: </label>
        <input type="tel" class="form-control" id="UPhoneNo" name="UPhoneNo" value="<%= data.UPhoneNo %>">
      </div>
      <button type="submit" class="btn btn-primary">บันทึกข้อมูล</button>
    </form>
  </div>
</body>
</html>
